<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res-auto"
    android:title="@string/extensions_title">

    <PreferenceCategory
        android:title="@string/extensions_statusbar_category">

        <Preference
            android:key="icon_manager"
            android:title="@string/icon_manager_title"
            android:summary="@string/icon_manager_summary">
            <intent android:action="com.android.settings.action.STATUS_BAR_TUNER" />
        </Preference>

        <!-- Network traffic -->
        <Preference
            android:key="network_traffic_settings"
            android:title="@string/network_traffic_settings_title"
            android:summary="@string/network_traffic_settings_summary"
            android:fragment="org.luminedroid.extensions.category.NetworkTrafficSettings" />

        <!-- Bluetooth battery status -->
        <org.luminedroid.support.preferences.SystemSettingSwitchPreference
            android:key="bluetooth_show_battery"
            android:title="@string/status_bar_bluetooth_battery_title"
            android:summary="@string/status_bar_bluetooth_battery_summary"
            android:defaultValue="true" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/extensions_misc_category">

        <org.luminedroid.support.preferences.SystemSettingSwitchPreference
            android:key="advanced_reboot"
            android:title="@string/global_actions_advanced_reboot_title"
            android:summary="@string/global_actions_advanced_reboot_summary"
            android:defaultValue="false" />
    </PreferenceCategory>

</PreferenceScreen>
